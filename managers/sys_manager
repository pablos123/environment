#!/usr/bin/env bash
#
#
set -e

help='
Options:

[-i] print system info
[-u] upgrade system
[-n] compile neovim
[-e] explain
[-h] help
'

explain='
General:
Common uses that I do with my system.
If you want a minimal environment create the file ~/.minimal_environment.

-i:
info_manager

-u:
Upgrade the system: apt, pip and independent .deb packages

-n:
Build neovim nightly

-e
This

-h
Help
'
source "${HOME}/environment/managers/lib/sys_packages.sh"
source "${HOME}/environment/managers/lib/sys_installers.sh"
source "${HOME}/.bashrc_colors"

info=false
upgrade=false
neovim=false

minimal=
if [[ -f "$HOME/.minimal_environment" ]]; then
    minimal="$(cat "$HOME/.minimal_environment")"
fi

getopts_executed=false
while getopts "iuenh" opt; do
    case $opt in
    i) info=true ;;
    u) upgrade=true ;;
    n) neovim=true ;;
    e) echo "${explain}" && exit 0 ;;
    h) echo "${help}" && exit 0 ;;
    *) echo "${help}" && exit 1 ;;
    esac
    getopts_executed=true
done

if ! $getopts_executed; then
    echo "No option given..."
    echo "${help}"
    exit 1
fi

print_green() {
    echo -e "${GREEN}${1}${CRESET}"
}

print_separator() {
    echo -e "${YELLOW}.........................${CRESET}"
}

get_root_access() {
    sudo -v
}

install_apt() {
    sudo apt-get -qq update
    sudo apt-get -qq dist-upgrade -y
    sudo apt-get -qq --with-new-pkgs upgrade -y
    sudo apt-get -qq install -y "${apt_packages[@]}"
}

install_pip() {
    curl -s https://bootstrap.pypa.io/get-pip.py -o get-pip.py
    python3 get-pip.py --user >/dev/null
    pip install -q "${pip_packages[@]}"
    rm -f ./get-pip.py
}

install_cargo() {
    cargo install "${cargo_packages[@]}" >/dev/null
}

install_flatpak() {
    sudo flatpak update -y >/dev/null
}

cleanup() {
    sudo apt-get -qq remove --purge -y steam wine
    sudo apt-get -qq autoremove --purge -y

    rm -f "${HOME}/.cache/dmenu_run"
    rm -f "${HOME}/dmenu_cache"
}

install_independent() {
    for inst_function in "${sys_installers[@]}"; do
        print_green "   Executing ${inst_function}..."
        "${inst_function}"
    done
}

execute_task() {
    print_green "${1}"
    "${2}"
    print_separator
}

minimal_environment_tasks() {
    sudo apt-get -qq remove --purge -y libreoffice*
    sudo apt-get -qq remove --purge -y flatpak*
    sudo apt-get -qq remove --purge -y thunderbird*
    sudo apt-get -qq remove --purge -y hexchat*
    sudo apt-get -qq remove --purge -y redshift*
    sudo apt-get -qq remove --purge -y webapp-manager
    sudo apt-get -qq remove --purge -y drawing
}

if $upgrade; then
    execute_task "Asking for root..." get_root_access

    mkdir -p "$HOME/images/" "$HOME/projects/" "$HOME/bin/"

    execute_task "Updating apt packages..." install_apt

    execute_task "Updating pip packages..." install_pip

    execute_task "Updating cargo packages..." install_cargo

    execute_task "Updating independent packages..." install_independent

    if [[ "$minimal" ]]; then minimal_environment; fi

    if which flatpak >/dev/null 2>&1; then
        execute_task "Updating flatpak packages..." install_flatpak
    fi

    execute_task "Cleaning up..." cleanup

    print_green "Done! Remember to reboot your pc!"

    exit 0
fi

if $info; then
    info_manager
    exit 0
fi

if $neovim; then
    execute_task "Asking for root..." get_root_access
    sudo "$HOME/environment/managers/lib/sys_neovim.sh"
    exit 0
fi
