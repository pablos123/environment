# https://i3wm.org/docs/userguide.html
# To generate the defaults run i3-config-wizard
# Do not do inline comments the configurations will break

set $mod Mod1

font pango:Lilex Nerd Font Bold 10

# Desk Notebook
workspace 1 output DisplayPort-2 HDMI-A-0 eDP-1 HDMI-1
workspace 2 output DisplayPort-2 HDMI-A-0 eDP-1 HDMI-1
workspace 3 output DisplayPort-2 HDMI-A-0 eDP-1 HDMI-1
workspace 4 output DisplayPort-2 HDMI-A-0 eDP-1 HDMI-1
workspace 5 output DisplayPort-2 HDMI-A-0 eDP-1 HDMI-1
workspace 6 output DisplayPort-2 HDMI-A-0 eDP-1 HDMI-1
workspace 7 output DisplayPort-2 HDMI-A-0 eDP-1 HDMI-1
workspace 8 output DisplayPort-2 HDMI-A-0 eDP-1 HDMI-1
workspace 9 output DisplayPort-2 HDMI-A-0 eDP-1 HDMI-1
# i3 cannot have a monitor without a workspace
workspace 0 output HDMI-1 eDP-1 DisplayPort-2 HDMI-A-0

# View the class name with xprop WM_CLASS
# The first part of the WM_CLASS is the instance, the second part is the class.
for_window [class="Google-chrome"] move container to workspace 1
for_window [class="org.wezfurlong.wezterm"] move container to workspace 3
for_window [class="DBeaver"] move container to workspace 4
for_window [class="steam"] move container to workspace 7
for_window [class="Nemo"] floating enable
for_window [instance="web.whatsapp.com"] move container to workspace 4, layout tabbed
for_window [instance="discord.com"] move container to workspace 4, layout tabbed
for_window [instance="web.telegram.org"] move container to workspace 4, layout tabbed
for_window [instance="open.spotify.com"] move container to workspace 9
for_window [instance="web.skype.com"] move container to workspace 4, layout tabbed

exec_always --no-startup-id keyboard_config
exec --no-startup-id sleep 1 && release_daemons

exec --no-startup-id sleep 1 && open_terminal
exec --no-startup-id sleep 2 && open_browser
exec --no-startup-id sleep 3 && web_apps
exec --no-startup-id sleep 7 && clean_urgent

bindsym $mod+Return exec --no-startup-id open_terminal
bindsym $mod+p exec --no-startup-id flameshot gui
bindsym $mod+o exec --no-startup-id dmenu_run
bindsym $mod+Shift+c kill

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

set $exit_mode [l]ogout [r]eboot [p]oweroff loc[k]
bindsym $mod+Shift+e mode "$exit_mode"
mode "$exit_mode" {
    bindsym l exec i3-msg exit
    bindsym r exec reboot
    bindsym p exec poweroff
    bindsym k exec xdotool key Escape && lock_screen

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+Shift+e mode "default"
}

bindsym $mod+Shift+r reload_environment

# https://wiki.linuxquestions.org/wiki/XF86_keyboard_symbols
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86Sleep exec --no-startup-id lock_screen

floating_modifier $mod
bindsym $mod+f fullscreen toggle
bindsym $mod+space floating toggle

bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 0

bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 0

bar {
    position bottom
    mode dock
    status_command i3status
}

# No gaps will be shown when there is precisely one window or
# split container on the workspace.
smart_gaps on
gaps inner 10
gaps outer 5
gaps horizontal 5
gaps vertical 5
gaps top 5
gaps left 5
gaps bottom 5
gaps right 5

# Hides edge-specific borders of a container if the container
# is the only container on its workspace and the gaps to the screen edge are 0.
hide_edge_borders smart_no_gaps
default_border pixel 3
default_floating_border pixel 2

