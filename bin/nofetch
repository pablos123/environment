#!/usr/bin/env bash

function user_info() {
    echo "User: $(id | awk '{print $1" "$2}')"
}

function hostname_info() {
    echo "Hostname: $(hostname)"
}

function uname_info() {
    echo "Kernel release: $(uname --kernel-release)"
}

function cpu_info() {
    lscpu | awk --field-separator=':' '/^Architecture|^CPU\(s\):|^Model name/ {print $1":"$2}'
}

function lsb_info() {
    lsb_release --all 2>/dev/null | awk --field-separator=':' '/^Distributor ID|^Description|^Release|^Codename/ {print $1":"$2}'
}

function mem_info() {
    free --human | awk '/^Mem/ {print $1" "$2}'
}

function wmctrl_info() {
    wmctrl -m | awk '/^Name/ {print "WM "$1" "$2}'
}

# -----------------------------------------------------------------------------

function get_info() {
    local funcs f

    funcs=(
        user_info
        hostname_info
        uname_info
        cpu_info
        lsb_info
        mem_info
        wmctrl_info
    )

    for f in "${funcs[@]}"; do
        "${f}"
    done
}

get_info | sed 's/\(.*:\)\s*/\1/g' | column --table --separator ':'
