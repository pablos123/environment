#!/usr/bin/env bash

function configure_keyboard() {
    xset r rate 230 50
    xset s 900
    xset dpms 0 0 3600

    # I bought a keyboard with mac's layout (Estaba 60 lucas menos, olvidate)
    # Swap cmd and opt if the keyboard is connected.
    # Give cmd altgr behaviour and opt ctrl.
    # The -option "" at the beginning is for not stacking up the same options
    # for obvious reasons.
    if lsusb | grep -q 'Inc. Logi Bolt Receiver'; then
        setxkbmap -layout eu -option "" -option "altwin:swap_lalt_lwin,ctrl:ralt_rctrl,lv3:rwin_switch,caps:swapescape"
    else
        setxkbmap -layout eu -option "" -option "caps:swapescape"
    fi
}

configure_keyboard

if [[ "${1}" == "-d" ]]; then
    while true; do
        sleep 10
        configure_keyboard
    done
fi

