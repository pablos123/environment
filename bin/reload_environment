#!/usr/bin/env bash

# .bashrc and .profile maybe belong to the system
# before I stow for the first time
rm -rf "${HOME}/.dotfiles_stow" "${HOME}/.bashrc" "${HOME}/.profile"

# Copy the base content
cp -r "${HOME}/environment/dotfiles" "${HOME}/.dotfiles_stow"

# Stow the new files
(
    cd "${HOME}/.dotfiles_stow"
    stow --target="$HOME" --restow -- */
)

rm -f "$HOME/.cache/dmenu_run" "$HOME/dmenu_cache"
fc-cache -rf >/dev/null 2>&1
killall dunst >/dev/null 2>&1
killall flameshot >/dev/null 2>&1
systemctl --user restart pipewire.service >/dev/null 2>&1
i3-msg reload >/dev/null 2>&1
