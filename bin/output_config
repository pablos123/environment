#!/usr/bin/env bash

x_size=600
y_size=400

source "${HOME}/environment/lib/helper_functions.sh"

pavucontrol -t 3 & disown

sleep 0.5

calculate_applet_position "${x_size}" "${y_size}"

xdotool search --onlyvisible --class "Pavucontrol" windowsize "${x_size}" "${y_size}"
xdotool search --onlyvisible --class "Pavucontrol" windowmove $(calculate_applet_position "${x_size}" "${y_size}")


