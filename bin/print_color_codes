#!/usr/bin/env bash

# Print all escape terminal colors
print_color_codes() {
    for x in {0..8}; do
        echo -ne "\e[$x""m\\\e[$x""m\e[0m "
        echo
    done
    for x in {0..8}; do
        for i in {30..37}; do
            echo -ne "\e[$x;$i""m\\\e[$x;$i""m\e[0m "
        done
        echo
    done
    for x in {0..8}; do
        for i in {30..37}; do
            for a in {40..47}; do
                echo -ne "\e[$x;$i;$a""m\\\e[$x;$i;$a""m\e[0m "
            done
            echo
        done
    done
    echo -ne "\e[0m"
}
